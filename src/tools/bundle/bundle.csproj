<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseAppHost>false</UseAppHost>
    <OutputPath>$(BinDir)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.HostModel" Version="5.0.0-alpha1.19453.5" />
  </ItemGroup>

  <ItemGroup Condition="'$(RestoreOnly)' == 'true'">
    <PackageReference Include="Microsoft.Private.CoreFx.NETCoreApp" Version="$(MicrosoftPrivateCoreFxNETCoreAppVersion)" />
  </ItemGroup>

  <Target Name="DumpCoreFxPackagePath" Condition="'$(RestoreOnly)' == 'true'" BeforeTargets="Restore">
    <Error Condition="'$(CoreFxPackagePathOutputFile)'==''" Text="CoreFxPackagePathOutputFile must be passed as a property." />

    <PropertyGroup>
      <CoreFxPackagePath>$(NuGetPackageRoot)\runtime.$(RuntimeIdentifier).microsoft.private.corefx.netcoreapp\$(MicrosoftPrivateCoreFxNETCoreAppVersion)</CoreFxPackagePath>
    </PropertyGroup>

    <Delete Files="$(CoreFxPackagePathOutputFile)" Condition="Exists('$(CoreFxPackagePathOutputFile)')" />
    <WriteLinesToFile File="$(CoreFxPackagePathOutputFile)" Lines="$(CoreFxPackagePath)" Overwrite="true"/>
    <Message Text="CoreFxPackagePath: $(CoreFxPackagePath) written to: $(CoreFxPackagePathOutputFile)" Importance="High" />
  </Target>
</Project>
